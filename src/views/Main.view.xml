<mvc:View
        controllerName="project0.src.controllers.Main"        
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        displayBlock="true">
        <Shell  backgroundColor = "#ffde79"
                backgroundImage="i18n>viewShellImg">
                <App>           
                    <Page
                        title="i18n>homePageTitle"
                        class="sapUiContentPadding sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer"
                        showNavButton="true" >
                        <headerContent>
                            <Button icon="sap-icon://action" tooltip="Share" />
                        </headerContent>
                        <subHeader>
                            <OverflowToolbar>
                                <SearchField />
                            </OverflowToolbar>
                        </subHeader>
                        <content>
                            <mvc:XMLView viewName="project0.src.views.SplitContainer"/>
                        </content>
                        <footer>
                            <OverflowToolbar>
                                <ToolbarSpacer/>
                                <Button text="Accept" type="Accept" />
                                <Button text="Reject" type="Reject" />
                                <Button text="Edit" />
                                <Button text="Delete" />
                            </OverflowToolbar>
                        </footer>
                    </Page>
                </App>
        </Shell>
</mvc:View>